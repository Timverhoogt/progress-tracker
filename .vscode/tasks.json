{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm: test",
      "type": "npm",
      "script": "test",
      "path": "backend/",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "npm: test:watch",
      "type": "npm",
      "script": "test:watch",
      "path": "backend/",
      "group": "test",
      "problemMatcher": [],
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "npm: test:unit",
      "type": "npm",
      "script": "test:unit",
      "path": "backend/",
      "group": "test",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "npm: test:integration",
      "type": "npm",
      "script": "test:integration",
      "path": "backend/",
      "group": "test",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "npm: test with coverage",
      "type": "shell",
      "command": "npm test -- --coverage",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "group": "test",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "npm: build",
      "type": "npm",
      "script": "build",
      "path": "backend/",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$tsc"],
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      }
    },
    {
      "label": "Open Coverage Report",
      "type": "shell",
      "command": "start coverage/lcov-report/index.html",
      "windows": {
        "command": "start coverage/lcov-report/index.html"
      },
      "linux": {
        "command": "xdg-open coverage/lcov-report/index.html"
      },
      "osx": {
        "command": "open coverage/lcov-report/index.html"
      },
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "never"
      }
    }
  ]
}

